<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#BBDEFB">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="John&apos;s NanoDegree Portfolio"
        android:id="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="24dp"
        android:typeface="sans" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/button"
        android:onClick="showToast"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textStyle="normal|bold"
        android:width="260dp"
        android:textSize="18sp"
        android:shadowColor="#e0e0e0e0"
        android:background="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES"
        android:id="@+id/button2"
        android:onClick="showToast"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="18dp"
        android:width="260dp"
        android:shadowColor="#e0e0e0e0"
        android:background="#ffd5d5d5"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY"
        android:id="@+id/button3"
        android:onClick="showToast"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:width="260dp"
        android:textSize="18dp"
        android:shadowColor="#e0e0e0e0"
        android:background="#ffababab"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/button4"
        android:onClick="showToast"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="18dp"
        android:width="260dp"
        android:shadowColor="#e0e0e0e0"
        android:background="#ff818181"
        android:textColor="#ffffffff"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/button5"
        android:onClick="showToast"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:width="260dp"
        android:textSize="18dp"
        android:shadowColor="#e0e0e0e0"
        android:background="#ff575757"
        android:textColor="#ffffffff"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:onClick="showToast2"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:width="260dp"
        android:textSize="18dp"
        android:shadowColor="#e0e0e0e0"
        android:background="#ffff0000"
        android:textColor="#ffffffff"
        android:layout_marginTop="10dp" />

</RelativeLayout>
